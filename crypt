#include<iostream> //file header yang berfungsi sebagai standar input output pada operasi c++
#include<math.h> //file header yang berfungsi untuk operasi matematika
#include<string.h> //merupakan header yang berisi fungsi-fungsi makro dan tipe yang digunakan untuk pengoprasian string dan array

using namespace std; //untuk mendeklarasikan fungsi atau class yang merupakan bagian dari namespace std yang bersangkutan

int p, q, n, t, flag, e[80], d[80], temp[80], j, m[80], en[80], i;
char msg[80];

int Prima(int pr) 
{
    int i;
    j = sqrt(pr);
        
    for (i = 2; i <= j; i++)
    {
        if (pr % i == 0)
            return 0;
    }
    return 1;
}

int ky(int x)
{
    long int k = 1;
    while (1)
    {
        k = k + t;
        if (k % x == 0)
            return (k / x);
    }
}

void yh()
{
    int k;
    k = 0;
    for (i = 2; i < t; i++)
    {
        if (t % i == 0)
            continue;
        flag = Prima(i);
            if (flag == 1 && i != p && i != q)
        {
            e[k] = i;
            flag = ky(e[k]);
            if (flag > 0)
            {
                d[k] = flag;
                k++;
            }
            if (k == 99)
                break;
        }
    }
}

void enkripsi()
{
    long int pt, ct, key = e[0], k, len;
    i = 0;
    len = strlen(msg);
    while (i != len)
    {
        pt = m[i];
        pt = pt - 96;
        k = 1;
        for (j = 0; j < key; j++)
        {
            k = k * pt;
            k = k % n;
        }
        temp[i] = k;
        ct = k + 96;
        en[i] = ct;
        i++;
    }
        
    en[i] = -1;
    cout << "\n     Enkripsi Pesan Anda              : ";
        
    for (i = 0; en[i] != -1; i++)
        printf("%c", en[i]);
}

//perhitungan dekripsi pesan
void dekripsi()
{
    long int pt, ct, key = d[0], k;
    i = 0;
    while (en[i] != -1)
    {
        ct = temp[i];
        k = 1;
        for (j = 0; j < key; j++)
        {
            k = k * ct;
            k = k % n;
        }
        pt = k + 96;
        m[i] = pt;
        i++;
    }

    m[i] = -1;
    cout << "\n     Dekripsi Pesan Anda              : ";    
    for (i = 0; m[i] != -1; i++)
        printf("%c", m[i]);
}

int main()
{
    
    cout << "\n ############################################################### \n";
    cout << "\n     Masukan Bilangan Prima Pertama   : ";
    cin >> p;
    flag = Prima(p);

    if (flag == 0)
    {
        cout << "\n     Inputan Bukan Bilangan Prima !!!!!\n";
        cout << "\n ############################################################### \n";
        exit(0);
    }

    cout << "     Masukan Bilangan Prima Kedua     : ";
    cin >> q;
    
    flag = Prima(q);

    if (flag == 0 || p == q)
    {
        cout << "\n     Inputan Bilangan Prima Yang Lain / Inputan Salah !!!! \n";
        cout << "\n ############################################################## \n";
        exit(1);
    }

    cout << "\n ############################################################## \n";
    cout << "\n     Masukan Pesan                    : ";
    cin >> msg;
    cout << "\n ############################################################## \n";
    for (i = 0; msg[i] != '\0'; i++)
    m[i] = msg[i];
    n = p * q;
    t = (p - 1) * (q - 1);
    yh();
    
    enkripsi();
    dekripsi();
    cout << "\n";
    cout << "\n ############################################################## \n";

    return 0;
}
